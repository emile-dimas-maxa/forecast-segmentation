{
  "forecast_horizon": 1,
  "min_history_months": 12,
  "methods_to_test": [
    "zero",
    "naive", 
    "moving_average",
    "weighted_moving_average",
    "arima",
    "sarima",
    "xgboost_individual",
    "xgboost_global",
    "croston",
    "ensemble",
    "segment_aggregate"
  ],
  "evaluation_levels": [
    "dim_value",
    "segment", 
    "overall"
  ],
  "ma_windows": [3, 6, 12],
  "ma_min_periods": 2,
  "wma_window": 6,
  "arima_auto_select": true,
  "arima_max_p": 3,
  "arima_max_d": 2,
  "arima_max_q": 3,
  "arima_seasonal": false,
  "xgb_n_estimators": 100,
  "xgb_max_depth": 5,
  "xgb_learning_rate": 0.1,
  "xgb_use_lag_features": true,
  "xgb_use_rolling_features": true,
  "xgb_use_date_features": true,
  "croston_alpha": 0.1,
  "calculate_mae": true,
  "calculate_rmse": true,
  "calculate_mape": true,
  "calculate_smape": true,
  "calculate_directional_accuracy": true,
  "mape_cap": 200.0,
  "zero_threshold": 1e-6,
  "use_parallel": true,
  "save_forecasts": true,
  "save_errors": true,
  "output_table_prefix": "auto_forecast_comprehensive"
}
